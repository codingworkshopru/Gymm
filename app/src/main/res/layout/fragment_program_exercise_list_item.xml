<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="repsCount"
            type="int" />
        <variable
            name="restTime"
            type="String" />
        <variable
            name="inActionMode"
            type="android.databinding.ObservableBoolean" />

        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/programRepsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@plurals/number_of_reps(repsCount, repsCount)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            app:layout_constraintBottom_toTopOf="@+id/programRestTime"
            app:layout_constraintEnd_toStartOf="@+id/programSetReorderImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Very very very very very very very very very long text"/>

        <TextView
            android:id="@+id/programRestTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/program_exercise_activity_dialog_rest_time_label + ' ' + (restTime ?? @string/program_exercise_activity_rest_time_not_set)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/programSetReorderImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/programRepsCount"
            tools:text="Very very very very very very very very very very long" />

        <ImageView
            android:id="@+id/programSetReorderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="@{inActionMode ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_reorder_black_24dp"
            tools:visibility="visible" />
    </android.support.constraint.ConstraintLayout>
</layout>