<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.codingworkshop.gymm.info.exercise.ExerciseInfoActivity">

    <data>
        <import type="android.view.View" />
        <import type="ru.codingworkshop.gymm.data.model.MuscleGroup"/>
        <variable name="exercise" type="ru.codingworkshop.gymm.data.model.Exercise"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:fitsSystemWindows="true"
            android:id="@+id/appBarLayout">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true">

                <!-- TODO фотография должна отображать что-то конкретное, а иллюстрация концептуальное и метафорическое -->
                <!-- FIXME рекомендованные соотношения 16:9 3:2 4:3 1:1 3:4 2:3-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/exercise_info_activity_appbar_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:fitsSystemWindows="true"
                        app:srcCompat="@drawable/sporty_woman"/>

                    <ImageButton
                        android:id="@+id/exercise_info_activity_play_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_circle_grey_24dp"
                        android:onClick="onVideoClick"
                        android:visibility="@{exercise.hasVideo() ? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_play_arrow_white_24dp"
                        tools:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/exercise_info_activity_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/exercise_info_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exercise_info_activity_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@{exercise.getName()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Сгибание рук со штангой"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/exercise_info_activity_main_muscle"
                    android:text="@{exercise.getPrimaryMuscleGroup().getName()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_info_activity_title"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_title"
                    tools:text="Бицепс" />

                <TextView
                    android:id="@+id/exercise_info_activity_secondary_muscles"
                    android:text="@{exercise.getSecondaryMuscles()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_info_activity_main_muscle"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_main_muscle"
                    tools:text="Предплечья &#8226; Плечи" />

                <ImageView
                    android:id="@+id/exercise_info_activity_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@android:color/black"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_secondary_muscles" />

                <ImageView
                    android:id="@+id/exercise_info_activity_difficulty"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_title"
                    app:srcCompat="@android:color/transparent" />

                <LinearLayout
                    android:id="@+id/exercise_info_activity_steps_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_divider">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_description_primary_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="Встаньте с прямой спиной, держа в руках штангу хватом на ширине плеч. Гриф держите ладонями вверх, локти близко к торсу. " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exercise_info_activity_advice_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_info_activity_steps_layout"
                    app:layout_constraintRight_toRightOf="@+id/exercise_info_activity_steps_layout"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_steps_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_lightbulb_primary_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="Не изменяйте положения локтей во время выполнения упражнения. " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exercise_info_activity_caution_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintRight_toRightOf="@+id/exercise_info_activity_advice_layout"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_advice_layout"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_info_activity_advice_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_warning_primary_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="Поскольку упражнение существенно нагружает сухожилия рук, вам нужно хорошо разогреть мышцы, перед тем как приступить к нему."
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exercise_info_activity_variations_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintRight_toRightOf="@+id/exercise_info_activity_caution_layout"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_info_activity_caution_layout"
                    app:layout_constraintTop_toBottomOf="@+id/exercise_info_activity_caution_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_call_split_primary_24dp" />

                    <TextView
                        android:id="@+id/exercise_info_activity_variations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий. При использовании EZ-грифа уменьшается нагрузка на мышцы предплечий."
                        android:layout_marginStart="16dp" />
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>
