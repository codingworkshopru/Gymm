<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="training"
            type="ru.codingworkshop.gymm.data.model.ProgramTraining" />
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_program_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.codingworkshop.gymm.program.activity.training.ProgramTrainingActivity">

        <!-- FIXME Внутри панели инструментов не может находиться ничего кроме названия активити (или фильтра содержимого) https://storage.googleapis.com/material-design/publish/material_v_10/assets/0B6Okdz75tqQsTW1zb2x5WWg5cDA/layout_structure_appbar_metrics5.png -->
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false"
                app:expandedTitleTextAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                app:contentScrim="?attr/colorPrimary">

                <LinearLayout
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/program_training_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/program_training_name"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:text="@={training.name}"
                            android:hint="@string/program_training_activity_name_hint"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                            tools:text="Бицуха"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/program_training_weekday_label"
                        android:text="@string/program_training_activity_weekday_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="?attr/colorAccent"/>

                    <Spinner
                        android:id="@+id/program_training_weekday"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom"
                        bind:value="@={training.weekday}"
                        android:layout_width="match_parent"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                android:id="@+id/toolbar2"
                app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/program_training_exercises_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_material_grey_200"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <TextView
            android:visibility="@{training.childrenCount() > 0 ? View.GONE : View.VISIBLE}"
            android:text="@string/program_training_activity_empty_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:drawableTop="@drawable/ic_fitness_200dp"
            android:layout_gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/program_training_add_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAddButtonClick"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_add_24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|end"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>