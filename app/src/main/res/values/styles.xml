<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_material_indigo_500</item>
        <item name="colorPrimaryDark">@color/color_material_indigo_700</item>
        <item name="colorAccent">@color/color_material_pink_A200</item>

        <!-- Alternative theme -->
        <!--<item name="colorPrimary">@color/color_material_blue_grey_500</item>-->
        <!--<item name="colorPrimaryDark">@color/color_material_blue_grey_700</item>-->
    </style>

    <style name="AppTheme.WhiteHighlights" parent="AppTheme">
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <!-- Activity styles -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarTheme">@style/AppTheme.NoActionBar.ActionBarTheme</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/color_material_pink_A100</item>
    </style>

    <style name="AppTheme.NoActionBar.SpinnerInAppBar" parent="AppTheme.NoActionBar">
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="spinnerDropDownItemStyle">@style/hui</item>
    </style>

    <style name="hui" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatusOn" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
