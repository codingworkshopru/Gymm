<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_material_indigo_500</item>
        <item name="colorPrimaryDark">@color/color_material_indigo_700</item>
        <item name="colorAccent">@color/color_material_pink_A200</item>

        <!-- Alternative theme -->
        <!--<item name="colorPrimary">@color/color_material_blue_grey_500</item>-->
        <!--<item name="colorPrimaryDark">@color/color_material_blue_grey_700</item>-->
    </style>

    <!-- Activity styles -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SpinnerInAppBar" parent="AppTheme.NoActionBar">
        <item name="actionBarTheme">@style/AppTheme.NoActionBar.SpinnerInActionBar.ActionBarTheme</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>
    <style name="AppTheme.NoActionBar.SpinnerInActionBar.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/color_material_pink_A100</item>
    </style>
    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatusOn" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="InvisibleText" parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>
