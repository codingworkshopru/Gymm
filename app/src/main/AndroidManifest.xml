<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.codingworkshop.gymm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusOn"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar.SpinnerInAppBar"
            android:launchMode="singleTop"
            android:name=".program.activity.training.ProgramTrainingActivity"
            android:label="@string/program_training_activity_title"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar.SpinnerInAppBar"
            android:launchMode="singleTop"
            android:name=".program.activity.exercise.ProgramExerciseActivity"
            android:label="@string/program_exercise_activity_title"
            android:parentActivityName=".program.activity.training.ProgramTrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="program.activity.training.ProgramTrainingActivity" />
        </activity>
    </application>

</manifest>